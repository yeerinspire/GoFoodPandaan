<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context=".ui.FoodDelivery.CartActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_2"
        >

        <LinearLayout
            android:id="@+id/ll_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_lokasitoko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Klik untuk menentukan lokasi toko anda"
                android:textSize="18dp"/>



        </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/maps"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/ll_lokasi"
            tools:context=".VerifikasiData"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            />

        <Button
            android:id="@+id/btn_konfirmlokasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:text="KONFIRM"
            android:layout_below="@id/maps"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv1"
        >

        <LinearLayout
            android:id="@+id/linearcart1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="Nasi Padang"
                android:textColor="#333333"
                android:textSize="24sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/cart_baris2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearcart1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rv_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/alamatpengiriman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Alamat Pengiriman"
                        android:textColor="#333333"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/homeAwal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/alamatpengiriman"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Alamat Pengiriman"
                            android:textColor="#333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Jalan Wonosari bla bla bla"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/homeAwal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:hint="masukan detail alamat" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/cart_rv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rv_alamat"
                    android:layout_marginTop="8dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/baris2isi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Pesanan"
                        android:textColor="#333333"
                        android:textSize="20sp" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="Tambah" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/baris2isi1"
                        android:layout_marginTop="20dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cart_rv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cart_rv1"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/pilihpembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Pilih Pembayaran"
                        android:textColor="#333333"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/radioGroup_pembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pilihpembayaran"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp">

                        <RadioButton
                            android:id="@+id/radio_tunai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Tunai" />

                        <RadioButton
                            android:id="@+id/radio_kipay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KI - PAY" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/ongkir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="35dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="Ongkir Rp. 0 "
                        tools:ignore="NotSibling" />

                    <TextView
                        android:id="@+id/ongkirpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ongkir"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="Ongkir Rp. 0 "
                        tools:ignore="NotSibling" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cart_rv2"
                    android:layout_marginTop="9dp"
                    android:background="#ffffff">


                    <TextView
                        android:id="@+id/detailpembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Detail Pembayaran"
                        android:textColor="#333333"
                        android:textSize="20sp" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/detailpembayaran"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:stretchColumns="1">

                        <TableRow android:background="#22ff">

                            <TextView
                                android:layout_column="0"
                                android:padding="3dip"
                                android:id="@+id/makkk"
                                android:text="Harga makanan" />

                            <TextView
                                android:id="@+id/hargamakanan"
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="Rp. 0"
                                tools:ignore="RtlHardcoded" />
                        </TableRow>
\
                        <View
                            android:layout_height="2dip"
                            android:background="#FF909090" />

                        <TableRow android:background="#ffff00">

                            <TextView
                                android:layout_column="0"
                                android:padding="3dip"
                                android:text="Ongkir" />

                            <TextView
                                android:id="@+id/estimasi"
                                android:layout_width="263dp"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="Rp. 0" />
                        </TableRow>

                        <TableRow android:background="#ffff00">

                            <TextView
                                android:layout_column="0"
                                android:padding="3dip"
                                android:text="Total Pembayaran" />

                            <TextView
                                android:id="@+id/txt_hargatotal"
                                android:gravity="right"
                                android:padding="3dip"
                                android:text="Rp. 0" />
                        </TableRow>

                        <View
                            android:layout_height="2dip"
                            android:background="#FF909090" />


                    </TableLayout>


                </RelativeLayout>
            </RelativeLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/cart_baris3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_hasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="Rp. 0 "
                android:textColor="#333333"
                android:textSize="18sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Pesan"
                android:id="@+id/btn_proses"
                />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>