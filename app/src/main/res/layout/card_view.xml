<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_item_product"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:id="@+id/linear1"
                    >
                    
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:background="@drawable/snack"
                        android:id="@+id/fotomakanan"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/fotomakanan"
                        android:layout_marginLeft="20dp"
                        android:textSize="18dp"
                        android:text="Martabak Manis"
                        android:textStyle="bold"
                        android:id="@+id/namamakanan"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/fotomakanan"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:text="Catatan"
                        android:textStyle="bold"
                        android:layout_below="@+id/namamakanan"
                        android:id="@+id/txt_catatan"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/fotomakanan"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/kotakkuning"
                        >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_hargamakanan"
                        android:text="Rp. 0 "
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/plus"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="5dp"
                            android:layout_alignParentRight="true"
                            android:id="@+id/btn_plus"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/btn_plus"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:id="@+id/counter"
                            android:text="0"
                            android:textSize="18sp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/min"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/counter"
                            android:layout_marginRight="10dp"
                            android:id="@+id/btn_min"
                            />


                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>